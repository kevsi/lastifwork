    <!-- Script pour le switch entre tableaux et grille et les filtres -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Éléments DOM pour la vue
            const tableViewBtn = document.getElementById('tableViewBtn');
            const gridViewBtn = document.getElementById('gridViewBtn');
            const tableView = document.getElementById('tableView');
            const gridView = document.getElementById('gridView');
            
            // Éléments DOM pour le filtre de contenu
            const showAllBtn = document.getElementById('showAllBtn');
            const showCategoriesBtn = document.getElementById('showCategoriesBtn');
            const showDocumentsBtn = document.getElementById('showDocumentsBtn');
            const categoryItems = document.querySelectorAll('.category-item');
            const documentItems = document.querySelectorAll('.document-item');
            
            // Événement pour afficher la vue tableau
            tableViewBtn.addEventListener('click', function() {
                tableView.style.display = 'block';
                gridView.style.display = 'none';
                
                tableViewBtn.classList.add('active');
                gridViewBtn.classList.remove('active');
            });
            
            // Événement pour afficher la vue grille
            gridViewBtn.addEventListener('click', function() {
                tableView.style.display = 'none';
                gridView.style.display = 'block';
                
                gridViewBtn.classList.add('active');
                tableViewBtn.classList.remove('active');
            });
            
            // Filtre pour afficher tous les éléments
            showAllBtn.addEventListener('click', function() {
                categoryItems.forEach(item => item.style.display = '');
                documentItems.forEach(item => item.style.display = '');
                
                showAllBtn.classList.add('active');
                showCategoriesBtn.classList.remove('active');
                showDocumentsBtn.classList.remove('active');
            });
            
            // Filtre pour afficher uniquement les catégories
            showCategoriesBtn.addEventListener('click', function() {
                categoryItems.forEach(item => item.style.display = '');
                documentItems.forEach(item => item.style.display = 'none');
                
                showCategoriesBtn.classList.add('active');
                showAllBtn.classList.remove('active');
                showDocumentsBtn.classList.remove('active');
            });
            
            // Filtre pour afficher uniquement les documents
            showDocumentsBtn.addEventListener('click', function() {
                categoryItems.forEach(item => item.style.display = 'none');
                documentItems.forEach(item => item.style.display = '');
                
                showDocumentsBtn.classList.add('active');
                showAllBtn.classList.remove('active');
                showCategoriesBtn.classList.remove('active');
            });
            
            // Recherche dans les éléments
            const searchInput = document.getElementById('search-categories');
            searchInput.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase();
                // Filtre les éléments en fonction du terme de recherche
                if (searchTerm.length > 0) {
                    // Recherche dans les catégories
                    categoryItems.forEach(item => {
                        const categoryName = item.querySelector('h6').textContent.toLowerCase();
                        const categoryDesc = item.querySelector('p.text-xs.font-weight-bold') ? 
                                           item.querySelector('p.text-xs.font-weight-bold').textContent.toLowerCase() : '';
                        
                        if (categoryName.includes(searchTerm) || categoryDesc.includes(searchTerm)) {
                            item.style.display = '';
                        } else {
                            item.style.display = 'none';
                        }
                    });
                    
                    // Recherche dans les documents
                    documentItems.forEach(item => {
                        const documentTitle = item.querySelector('h6').textContent.toLowerCase();
                        const documentDesc = item.querySelector('p.text-xs.font-weight-bold') ? 
                                           item.querySelector('p.text-xs.font-weight-bold').textContent.toLowerCase() : '';
                        
                        if (documentTitle.includes(searchTerm) || documentDesc.includes(searchTerm)) {
                            item.style.display = '';
                        } else {
                            item.style.display = 'none';
                        }
                    });
                } else {
                    // Si le champ de recherche est vide, afficher tous les éléments
                    categoryItems.forEach(item => item.style.display = '');
                    documentItems.forEach(item => item.style.display = '');
                }
            });
        });
    </script>
    
    <script src="{{ asset('assets/js/material-dashboard.min.js') }}"></script>
