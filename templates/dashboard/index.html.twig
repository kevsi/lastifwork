 {% extends "base.html.twig" %}
 {% block body %}
 {% include "aside.html.twig" %}

    <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg">
    
        {% include "navbar.html.twig" %}
        
        <div class="container">
            <!-- Dashboard Header -->
            <div class="row">
                <div class="ms-3">
                    <h3 class="mb-0 h4 font-weight-bolder">Dashboard</h3>
                    <p class="mb-4">Présentations des dernières informations récentes</p>
                </div>
                  
                <!-- Stats Cards -->
                {% set stats_data = [
                    {title: "Nombres de documents", value: "500", icon: "weekend", change: "+55%", changeType: "success", comparison: "depuis une semaine"},
                    {title: "Nombres de catégories", value: "23", icon: "person", change: "+3%", changeType: "success", comparison: "depuis une semaine"},
                    {title: "Fichiers médias", value: "3,462", icon: "leaderboard", change: "-2%", changeType: "danger", comparison: "depuis le dernier mois"},
                    {title: "Utilisateurs controlés", value: "10000", icon: "weekend", change: "+5%", changeType: "success", comparison: "depuis deux mois"}
                ] %}
                
                {% for stat in stats_data %}
                <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
                    <div class="card">
                        <div class="card-header p-2 ps-3">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <p class="text-sm mb-0 text-capitalize">{{ stat.title }}</p>
                                    <h4 class="mb-0">{{ stat.value }}</h4>
                                </div>
                                <div class="icon icon-md icon-shape bg-gradient-dark shadow-dark text-center border-radius-lg ">
                                    <i class="material-symbols-rounded opacity-10">{{ stat.icon }}</i>
                                </div>
                            </div>
                        </div>
                        <hr class="dark horizontal my-0">
                        <div class="card-footer p-2 ps-3">
                            <p class="mb-0 text-sm"><span class="text-{{ stat.changeType }} font-weight-bolder">{{ stat.change }} </span>{{ stat.comparison }}</p>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>

            <!-- Charts Row -->
            <div class="row">
                {% set charts_data = [
                    {title: "Suivis des docuents en temps réel", subtitle: "Par mois", id: "chart-bars", type: "bar", icon: "schedule", update: "mis à jour hier"},
                    {title: "Suivis des utilisateurs", subtitle: "(<span class=\"font-weight-bolder\">+15%</span>) cette semaine.", id: "chart-line", type: "line", icon: "schedule", update: "mis à jour ce matin"},
                    {title: "Fichiers multimédias", subtitle: "Par jours", id: "chart-line-tasks", type: "line-tasks", icon: "schedule", update: "mis à jour le 2 mars"}
                ] %}
                
                {% for chart in charts_data %}
                <div class="{{ loop.last ? 'col-lg-4' : 'col-lg-4 col-md-6' }} mt-4 mb-{{ loop.last ? '3' : '4' }}">
                    <div class="card">
                        <div class="card-body">
                            <h6 class="mb-0">{{ chart.title }}</h6>
                            <p class="text-sm">{{ chart.subtitle|raw }}</p>
                            <div class="pe-2">
                                <div class="chart">
                                    <canvas id="{{ chart.id }}" class="chart-canvas" height="170" data-type="{{ chart.type }}"></canvas>
                                </div>
                            </div>
                            <hr class="dark horizontal">
                            <div class="d-flex">
                                <i class="material-symbols-rounded text-sm my-auto me-1">{{ chart.icon }}</i>
                                <p class="mb-0 text-sm">{{ chart.update }}</p>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>

            <!-- Projects and Orders Overview -->
            <div class="row mb-4">
                <!-- Projects Table -->
                <div class="col-lg-8 col-md-6 mb-md-0 mb-4">
                    <div class="card">
                        <div class="card-header pb-0">
                            <div class="row">
                                <div class="col-lg-6 col-7">
                                    <h6>Workspaces récents</h6>
                                    <p class="text-sm mb-0">
                                        <i class="fa fa-check text-info" aria-hidden="true"></i>
                                        <span class="font-weight-bold ms-1">6 derniers</span>
                                    </p>
                                </div>
                                <div class="col-lg-6 col-5 my-auto text-end">
                                    <div class="dropdown float-lg-end pe-4">
                                        <a class="cursor-pointer" id="dropdownTable" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="fa fa-ellipsis-v text-secondary"></i>
                                        </a>
                                        <ul class="dropdown-menu px-2 py-3 ms-sm-n4 ms-n5" aria-labelledby="dropdownTable">
                                            <li><a class="dropdown-item border-radius-md" href="javascript:;">Action</a></li>
                                            <li><a class="dropdown-item border-radius-md" href="javascript:;">Another action</a></li>
                                            <li><a class="dropdown-item border-radius-md" href="javascript:;">Something else here</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body px-0 pb-2">
                            <div class="table-responsive">
                                <table class="table align-items-center mb-0">
                                    <thead>
                                        <tr>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Nom</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Membres</th>
                                            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Date de création</th>
                                            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Description</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% set projects = [
                                            {name: "Rapports annuels", logo: "logo-xd.svg", category: "$14,000", progress: 60, progressColor: "info", team: ["team-1.jpg", "team-2.jpg", "team-3.jpg", "team-4.jpg"]},
                                            {name: "CV_ALEXANDERS", logo: "logo-atlassian.svg", category: "$3,000", progress: 10, progressColor: "info", team: ["team-2.jpg", "team-4.jpg"]},
                                            {name: "Fiches tenhniques", logo: "logo-slack.svg", category: "Not set", progress: 100, progressColor: "success", team: ["team-3.jpg", "team-1.jpg"]},
                                            {name: "Demandes", logo: "logo-spotify.svg", category: "$20,500", progress: 100, progressColor: "success", team: ["team-4.jpg", "team-3.jpg", "team-4.jpg", "team-1.jpg"]},
                                            {name: "PLaintes", logo: "logo-jira.svg", category: "$500", progress: 25, progressColor: "info", team: ["team-4.jpg"]},
                                            {name: "Demission_alexanders", logo: "logo-invision.svg", category: "$2,000", progress: 40, progressColor: "info", team: ["team-1.jpg", "team-4.jpg"]}
                                        ] %}
                                        
                                        {% for project in projects %}
                                        <tr>
                                            <td>
                                                <div class="d-flex px-2 py-1">
                                                    <div>
                                                        <img src="https://img.freepik.com/vecteurs-libre/cercle-bleu-utilisateur-blanc_78370-4707.jpg?t=st=1744899345~exp=1744902945~hmac=761628302b0212cfb41e78d8c349dd08cd20c629b81ac1cb89eefca2edb6a0e9&w=740" class="avatar avatar-sm me-3" alt="">
                                                    </div>
                                                    <div class="d-flex flex-column justify-content-center">
                                                        <h6 class="mb-0 text-sm">{{ project.name }}</h6>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="avatar-group mt-2">
                                                    {% for member in project.team %}
                                                    <a href="javascript:;" class="avatar avatar-xs rounded-circle" data-bs-toggle="tooltip" data-bs-placement="bottom">
                                                        <img src="../assets/img/{{ member }}" >
                                                    </a>
                                                    {% endfor %}
                                                </div>
                                            </td>
                                            <td class="align-middle text-center text-sm">
                                                <span class="text-xs font-weight-bold"> {{ project.category }} </span>
                                            </td>
                                            <td class="align-middle">
                                                <div class="progress-wrapper w-75 mx-auto">
                                                    <div class="progress-info">
                                                        <div class="progress-percentage">
                                                            <span class="text-xs font-weight-bold">{{ project.progress }}%</span>
                                                        </div>
                                                    </div>
                                                    <div class="progress">
                                                        <div class="progress-bar bg-gradient-{{ project.progressColor }} w-{{ project.progress }}" role="progressbar" aria-valuenow="{{ project.progress }}" aria-valuemin="0" aria-valuemax="100"></div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Orders Timeline -->
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100">
                        <div class="card-header pb-0">
                            <h6>Catégories</h6>
                            <p class="text-sm">
                                <i class="fa fa-arrow-up text-success" aria-hidden="true"></i>
                                <span class="font-weight-bold">6</span> récents
                            </p>
                        </div>
                        <div class="card-body p-3">
                            <div class="timeline timeline-one-side">
                                {% set timeline_items = [
                                    {icon: "notifications", color: "success", title: "Administration", date: "22 DEC 7:20 PM"},
                                    {icon: "code", color: "danger", title: "Rapports", date: "21 DEC 11 PM"},
                                    {icon: "shopping_cart", color: "info", title: "Plaintes", date: "21 DEC 9:34 PM"},
                                    {icon: "credit_card", color: "warning", title: "CV", date: "20 DEC 2:20 AM"},
                                    {icon: "key", color: "primary", title: "Médias info", date: "18 DEC 4:54 AM"},
                                    {icon: "payments", color: "dark", title: "Finances", date: "17 DEC"}
                                ] %}
                                
                                {% for item in timeline_items %}
                                <div class="timeline-block mb-3">
                                    <span class="timeline-step">
                                        <i class="material-symbols-rounded text-{{ item.color }} text-gradient">{{ item.icon }}</i>
                                    </span>
                                    <div class="timeline-content">
                                        <h6 class="text-dark text-sm font-weight-bold mb-0">{{ item.title }}</h6>
                                        <p class="text-secondary font-weight-bold text-xs mt-1 mb-0">{{ item.date }}</p>
                                    </div>
                                </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
             {# Scripts #}
    <script src="{{ asset('assets/js/core/popper.min.js') }}"></script>
    <script src="{{ asset('assets/js/core/bootstrap.min.js') }}"></script>
    <script src="{{ asset('assets/js/plugins/perfect-scrollbar.min.js') }}"></script>
    <script src="{{ asset('assets/js/plugins/smooth-scrollbar.min.js') }}"></script>
    <script>
        var win = navigator.platform.indexOf('Win') > -1;
        if (win && document.querySelector('#sidenav-scrollbar')) {
            var options = {
                damping: '0.5'
            }
            Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
        }
        
        // Initialiser les tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        });
    </script>
           {% endblock%}