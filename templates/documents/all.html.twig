
{% extends 'base.html.twig' %}

{% block title %}Tous les documents - Système de Gestion Documentaire{% endblock %}

{% block body %}
    {% set getIconColor = {
        'rapport': 'info',
        'contrat': 'success',
        'facture': 'warning',
        'procedure': 'primary',
        'procédure': 'primary',
        'note': 'danger'
    } %}
    
    {% set getFormatColor = {
        'pdf': 'success',
        'docx': 'info',
        'doc': 'info',
        'xlsx': 'warning',
        'xls': 'warning',
        'txt': 'danger',
        'png': 'primary',
        'jpg': 'primary',
        'jpeg': 'primary'
    } %}
    
    {% include "aside.html.twig" %}

    <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg">
        {# Inclure la barre de navigation #}
        {% include "navbar.html.twig" %}
        
        <div class="container-fluid py-2">
            <div class="row">
                <div class="col-12">
                    <div class="card my-4">
                        {# En-tête de la carte #}
                        <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                            <div class="bg-gradient-dark shadow-dark border-radius-lg pt-4 pb-3 d-flex justify-content-between align-items-center">
                                <h6 class="text-white text-capitalize ps-3">Tous les documents</h6>
                                <div class="pe-3">
                                    <a href="{{path('app_docs_create')}}" class="btn btn-sm btn-white">Ajouter document</a>
                                    <a href="{{path('app_docs_numerise')}}" class="btn btn-sm btn-white">Numériser un document</a>
                                    <a href="{{path('app_docs')}}" class="btn btn-sm btn-white">Retour</a>
                                </div>
                            </div>
                        </div>
                        
                        {# Corps de la carte avec filtre et recherche #}
                        <div class="card-body px-3 pt-3 pb-2">
                            <div class="row mb-3 align-items-center">
                                <div class="col-md-4">
                                    <div class="input-group input-group-outline">
                                        <label class="form-label">Rechercher...</label>
                                        <input type="text" class="form-control" id="search-documents">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="input-group input-group-static">
                                        <label>Filtrer par</label>
                                        <select name="filter" class="form-control" id="filter-documents">
                                            <option value="date-desc" {% if currentFilter == 'date-desc' %}selected{% endif %}>Plus récents</option>
                                            <option value="date-asc" {% if currentFilter == 'date-asc' %}selected{% endif %}>Plus anciens</option>
                                            <option value="name-asc" {% if currentFilter == 'name-asc' %}selected{% endif %}>Nom (A-Z)</option>
                                            <option value="name-desc" {% if currentFilter == 'name-desc' %}selected{% endif %}>Nom (Z-A)</option>
                                            <option value="size-asc" {% if currentFilter == 'size-asc' %}selected{% endif %}>Taille (croissant)</option>
                                            <option value="size-desc" {% if currentFilter == 'size-desc' %}selected{% endif %}>Taille (décroissant)</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-4 text-end">
                                    <!-- Boutons pour basculer entre les vues -->
                                    <div class="btn-group me-2" role="group" aria-label="Mode d'affichage">
                                        <button type="button" class="btn btn-sm btn-outline-dark active" id="tableViewBtn">
                                            <i class="material-icons">view_list</i>
                                        </button>
                                        <button type="button" class="btn btn-sm btn-outline-dark" id="gridViewBtn">
                                            <i class="material-icons">grid_view</i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Vue en tableau (visible par défaut) -->
                            <div id="tableView">
                                <div class="table-responsive">
                                    <table class="table align-items-center mb-0">
                                        <thead>
                                            <tr>
                                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Document</th>
                                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Catégorie</th>
                                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Type</th>
                                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Format</th>
                                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Taille</th>
                                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Date</th>
                                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Auteur</th>
                                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for document in documents %}
                                                <tr>
                                                    <td>
                                                        <div class="d-flex px-2 py-1">
                                                            <div class="icon-document me-3">
                                                                <i class="material-icons text-{{ getIconColor(document.type) }}">description</i>
                                                            </div>
                                                            <div class="d-flex flex-column justify-content-center">
                                                                <h6 class="mb-0 text-sm">{{ document.title }}</h6>
                                                                <p class="text-xs text-secondary mb-0">{{ document.filename }}</p>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        {% if document.category %}
                                                            <p class="text-xs font-weight-bold mb-0">{{ document.category.name }}</p>
                                                            <p class="text-xs text-secondary mb-0">{{ document.category.department }}</p>
                                                        {% else %}
                                                            <p class="text-xs text-secondary mb-0">Non classé</p>
                                                        {% endif %}
                                                    </td>
                                                    <td class="align-middle text-center text-sm">
                                                        <span class="badge badge-sm bg-gradient-{{ getIconColor(document.type) }}">
                                                            {{ document.type }}
                                                        </span>
                                                    </td>
                                                    <td class="align-middle text-center text-sm">
                                                        <span class="badge badge-sm bg-gradient-{{ getFormatColor(document.format) }}">
                                                            {{ document.format|upper }}
                                                        </span>
                                                    </td>
                                                    <td class="align-middle text-center">
                                                        <span class="text-secondary text-xs font-weight-bold">{{ (document.size / 1024)|round(1) }} KB</span>
                                                    </td>
                                                    <td class="align-middle text-center">
                                                        <span class="text-secondary text-xs font-weight-bold">{{ document.createdAt|date('d/m/Y H:i') }}</span>
                                                    </td>
                                                    <td class="align-middle text-center text-sm">
                                                        {% if document.author is defined %}
                                                            {{ document.author.fullName }}
                                                        {% else %}
                                                            {{ document.user.fullName }}
                                                        {% endif %}
                                                    </td>
                                                    <td class="align-middle text-center">
                                                        <div class="btn-group" role="group">
                                                            <a href="{{ path('app_docs_view', {'id': document.id}) }}" class="btn btn-sm btn-info" data-bs-toggle="tooltip" title="Voir">
                                                                <i class="material-icons">visibility</i>
                                                            </a>
                                                            <a href="{{ path('app_docs_download', {'id': document.id}) }}" class="btn btn-sm btn-success" data-bs-toggle="tooltip" title="Télécharger">
                                                                <i class="material-icons">download</i>
                                                            </a>
                                                            {% if is_granted('EDIT', document) %}
                                                                <a href="{{ path('app_docs_edit', {'id': document.id}) }}" class="btn btn-sm btn-warning" data-bs-toggle="tooltip" title="Modifier">
                                                                    <i class="material-icons">edit</i>
                                                                </a>
                                                            {% endif %}
                                                            {% if is_granted('DELETE', document) %}
                                                                <a href="{{ path('app_docs_delete', {'id': document.id}) }}" class="btn btn-sm btn-danger" 
                                                                onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce document?');" title="Supprimer">
                                                                    <i class="material-icons">delete</i>
                                                                </a>
                                                            {% endif %}
                                                        </div>
                                                    </td>
                                                </tr>
                                            {% else %}
                                                <tr>
                                                    <td colspan="8" class="text-center py-4">
                                                        <p class="text-secondary">Aucun document disponible</p>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            
                            <!-- Vue en grille (cachée par défaut) -->
                            <div id="gridView" style="display: none;">
                                <div class="row">
                                    {% for document in documents %}
                                        <div class="col-md-4 col-lg-3 mb-4">
                                            <div class="card h-100">
                                                <div class="card-header p-3 bg-light">
                                                    <div class="d-flex align-items-center">
                                                        <div class="icon-document me-3">
                                                            <i class="material-icons text-{{ getIconColor(document.type) }} opacity-10" style="font-size: 2.5rem;">description</i>
                                                        </div>
                                                        <div>
                                                            <h6 class="mb-0 text-sm">{{ document.title }}</h6>
                                                            <p class="text-xs text-secondary mb-0">{{ document.filename }}</p>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="card-body py-2">
                                                    <div class="mb-2">
                                                        <span class="badge badge-sm bg-gradient-{{ getFormatColor(document.format) }}">
                                                            {{ document.format|upper }}
                                                        </span>
                                                        <span class="badge badge-sm bg-gradient-{{ getIconColor(document.type) }}">
                                                            {{ document.type }}
                                                        </span>
                                                    </div>
                                                    <p class="text-xs text-secondary mb-1">
                                                        <i class="material-icons align-middle" style="font-size: 0.85rem;">folder</i>
                                                        {% if document.category %}
                                                            {{ document.category.name }}
                                                        {% else %}
                                                            Non classé
                                                        {% endif %}
                                                    </p>
                                                    <p class="text-xs text-secondary mb-1">
                                                        <i class="material-icons align-middle" style="font-size: 0.85rem;">storage</i>
                                                        {{ (document.size / 1024)|round(1) }} KB
                                                    </p>
                                                    <p class="text-xs text-secondary mb-1">
                                                        <i class="material-icons align-middle" style="font-size: 0.85rem;">calendar_today</i>
                                                        {{ document.createdAt|date('d/m/Y') }}
                                                    </p>
                                                    <p class="text-xs text-secondary mb-0">
                                                        <i class="material-icons align-middle" style="font-size: 0.85rem;">person</i>
                                                        {% if document.author is defined %}
                                                            {{ document.author.fullName }}
                                                        {% else %}
                                                            {{ document.user.fullName }}
                                                        {% endif %}
                                                    </p>
                                                </div>
                                                <div class="card-footer p-2">
                                                    <div class="btn-group w-100" role="group">
                                                        <a href="{{ path('app_docs_view', {'id': document.id}) }}" class="btn btn-sm btn-info" data-bs-toggle="tooltip" title="Voir">
                                                            <i class="material-icons">visibility</i>
                                                        </a>
                                                        <a href="{{ path('app_docs_download', {'id': document.id}) }}" class="btn btn-sm btn-success" data-bs-toggle="tooltip" title="Télécharger">
                                                            <i class="material-icons">download</i>
                                                        </a>
                                                        {% if is_granted('EDIT', document) %}
                                                            <a href="{{ path('app_docs_edit', {'id': document.id}) }}" class="btn btn-sm btn-warning" data-bs-toggle="tooltip" title="Modifier">
                                                                <i class="material-icons">edit</i>
                                                            </a>
                                                        {% endif %}
                                                        {% if is_granted('DELETE', document) %}
                                                            <a href="{{ path('app_docs_delete', {'id': document.id}) }}" class="btn btn-sm btn-danger" 
                                                            onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce document?');" title="Supprimer">
                                                                <i class="material-icons">delete</i>
                                                            </a>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    {% else %}
                                        <div class="col-12 text-center py-4">
                                            <p class="text-secondary">Aucun document disponible</p>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    
    {# Configurateur du thème #}
    <div class="fixed-plugin">
        <a class="fixed-plugin-button text-dark position-fixed px-3 py-2">
            <i class="material-symbols-rounded py-2">settings</i>
        </a>
        <div class="card shadow-lg">
            <div class="card-header pb-0 pt-3">
                <div class="float-start">
                    <h5 class="mt-3 mb-0">Paramètres d'affichage</h5>
                    <p>Personnalisez l'interface</p>
                </div>
                <div class="float-end mt-4">
                    <button class="btn btn-link text-dark p-0 fixed-plugin-close-button">
                        <i class="material-symbols-rounded">clear</i>
                    </button>
                </div>
            </div>
            <hr class="horizontal dark my-1">
            <div class="card-body pt-sm-3 pt-0">
                {# Couleurs de la barre latérale #}
                <div>
                    <h6 class="mb-0">Couleur du menu</h6>
                </div>
                <a href="javascript:void(0)" class="switch-trigger background-color">
                    <div class="badge-colors my-2 text-start">
                        <span class="badge filter bg-gradient-primary" data-color="primary" onclick="sidebarColor(this)"></span>
                        <span class="badge filter bg-gradient-dark active" data-color="dark" onclick="sidebarColor(this)"></span>
                        <span class="badge filter bg-gradient-info" data-color="info" onclick="sidebarColor(this)"></span>
                        <span class="badge filter bg-gradient-success" data-color="success" onclick="sidebarColor(this)"></span>
                        <span class="badge filter bg-gradient-warning" data-color="warning" onclick="sidebarColor(this)"></span>
                        <span class="badge filter bg-gradient-danger" data-color="danger" onclick="sidebarColor(this)"></span>
                    </div>
                </a>
                
                {# Type de barre latérale #}
                <div class="mt-3">
                    <h6 class="mb-0">Type de menu</h6>
                    <p class="text-sm">Choisissez le style de la barre latérale.</p>
                </div>
                <div class="d-flex">
                    <button class="btn bg-gradient-dark px-3 mb-2" data-class="bg-gradient-dark" onclick="sidebarType(this)">Sombre</button>
                    <button class="btn bg-gradient-dark px-3 mb-2 ms-2" data-class="bg-transparent" onclick="sidebarType(this)">Transparent</button>
                    <button class="btn bg-gradient-dark px-3 mb-2 active ms-2" data-class="bg-white" onclick="sidebarType(this)">Clair</button>
                </div>
                <p class="text-sm d-xl-none d-block mt-2">Vous pouvez changer le type de menu uniquement sur ordinateur.</p>
                
                {# Barre de navigation fixe #}
                <div class="mt-3 d-flex">
                    <h6 class="mb-0">Barre de navigation fixe</h6>
                    <div class="form-check form-switch ps-0 ms-auto my-auto">
                        <input class="form-check-input mt-1 ms-auto" type="checkbox" id="navbarFixed" onclick="navbarFixed(this)">
                    </div>
                </div>
                <hr class="horizontal dark my-3">
                
                {# Mode clair/sombre #}
                <div class="mt-2 d-flex">
                    <h6 class="mb-0">Clair / Sombre</h6>
                    <div class="form-check form-switch ps-0 ms-auto my-auto">
                        <input class="form-check-input mt-1 ms-auto" type="checkbox" id="dark-version" onclick="darkMode(this)">
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    {# Scripts #}
    <script src="{{ asset('assets/js/core/popper.min.js') }}"></script>
    <script src="{{ asset('assets/js/core/bootstrap.min.js') }}"></script>
    <script src="{{ asset('assets/js/plugins/perfect-scrollbar.min.js') }}"></script>
    <script src="{{ asset('assets/js/plugins/smooth-scrollbar.min.js') }}"></script>
    
    <script>
        // Initialisation du scrollbar
        var win = navigator.platform.indexOf('Win') > -1;
        if (win && document.querySelector('#sidenav-scrollbar')) {
            var options = {
                damping: '0.5'
            }
            Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
        }
        
        // Initialiser les tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        });
    </script>
    
    <!-- Script pour le switch entre tableaux et grille et le filtrage -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Éléments DOM
            const tableViewBtn = document.getElementById('tableViewBtn');
            const gridViewBtn = document.getElementById('gridViewBtn');
            const tableView = document.getElementById('tableView');
            const gridView = document.getElementById('gridView');
            const searchInput = document.getElementById('search-documents');
            const filterSelect = document.getElementById('filter-documents');
            
            // Événement pour afficher la vue tableau
            tableViewBtn.addEventListener('click', function() {
                tableView.style.display = 'block';
                gridView.style.display = 'none';
                tableViewBtn.classList.add('active');
                gridViewBtn.classList.remove('active');
                localStorage.setItem('preferredView', 'table');
            });
            
            // Événement pour afficher la vue grille
            gridViewBtn.addEventListener('click', function() {
                tableView.style.display = 'none';
                gridView.style.display = 'block';
                tableViewBtn.classList.remove('active');
                gridViewBtn.classList.add('active');
                localStorage.setItem('preferredView', 'grid');
            });
            
            // Recherche en temps réel
            searchInput.addEventListener('keyup', function() {
                const searchTerm = this.value.toLowerCase();
                filterDocuments(searchTerm);
            });
            
            // Filtrer par le critère sélectionné
            filterSelect.addEventListener('change', function() {
                const selectedFilter = this.value;
                window.location.href = "{{ path('app_docs_all') }}?filter=" + selectedFilter;
            });
            
            // Filtrer les documents selon le terme de recherche
            function filterDocuments(searchTerm) {
                // Filtrer dans la vue tableau
                const tableRows = document.querySelectorAll('#tableView tbody tr');
                tableRows.forEach(row => {
                    const docTitle = row.querySelector('h6')?.textContent.toLowerCase() || '';
                    const docFilename = row.querySelector('h6 + p')?.textContent.toLowerCase() || '';
                    const docType = row.querySelector('td:nth-child(3) span')?.textContent.toLowerCase() || '';
                    const docFormat = row.querySelector('td:nth-child(4) span')?.textContent.toLowerCase() || '';
                    const docCategory = row.querySelector('td:nth-child(2) p')?.textContent.toLowerCase() || '';
                    
                    if (docTitle.includes(searchTerm) || 
                        docFilename.includes(searchTerm) || 
                        docType.includes(searchTerm) || 
                        docFormat.includes(searchTerm) || 
                        docCategory.includes(searchTerm)) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
                
                // Filtrer dans la vue grille
                const gridCards = document.querySelectorAll('#gridView .col-md-4');
                gridCards.forEach(card => {
                    const docTitle = card.querySelector('h6')?.textContent.toLowerCase() || '';
                    const docFilename = card.querySelector('h6 + p')?.textContent.toLowerCase() || '';
                    const docFormat = card.querySelector('.badge:first-child')?.textContent.toLowerCase() || '';
                    const docType = card.querySelector('.badge:nth-child(2)')?.textContent.toLowerCase() || '';
                    const docCategory = card.querySelector('.card-body p:first-child')?.textContent.toLowerCase() || '';
                    
                    if (docTitle.includes(searchTerm) || 
                        docFilename.includes(searchTerm) || 
                        docType.includes(searchTerm) || 
                        docFormat.includes(searchTerm) || 
                        docCategory.includes(searchTerm)) {
                        card.style.display = '';
                    } else {
                        card.style.display = 'none';
                    }
                });
            }
            
            // Restaurer la vue préférée de l'utilisateur
            const preferredView = localStorage.getItem('preferredView');
            if (preferredView === 'grid') {
                gridViewBtn.click();
            }
        });
    </script>
{% endblock %}
