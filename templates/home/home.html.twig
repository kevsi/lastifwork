{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --primary-color: #4F9CF9;
            --secondary-color: #043873;
            --white: #ffffff;
            --light-blue: #C4DDFF;
            --gray: #6C757D;
        }

        body {
            font-family: 'Inter', sans-serif;
            color: #212529;
            background-color: #FAFBFC;
        }

        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
            border-radius: 6px;
            padding: 12px 24px;
            font-weight: 500;
        }

        .btn-secondary {
            background-color: var(--secondary-color);
            border-color: var(--secondary-color);
            border-radius: 6px;
            padding: 12px 24px;
            font-weight: 500;
        }

        .navbar {
            background-color: var(--secondary-color);
            padding: 15px 0;
        }

        .navbar-brand img {
            height: 40px;
        }

        .nav-link {
            color: var(--white) !important;
            margin: 0 12px;
            font-weight: 500;
        }

        .hero-section {
            background-color: var(--secondary-color);
            color: var(--white);
            padding: 120px 0 80px;
        }

        .hero-title {
            font-size: 48px;
            font-weight: 700;
            margin-bottom: 24px;
        }

        .hero-text {
            font-size: 18px;
            margin-bottom: 32px;
            opacity: 0.9;
        }

        .feature-section {
            padding: 80px 0;
        }

        .feature-card {
            background-color: var(--white);
            border-radius: 12px;
            padding: 32px;
            box-shadow: 0 8px 16px rgba(0,0,0,0.08);
            height: 100%;
            transition: transform 0.3s;
        }

        .feature-card:hover {
            transform: translateY(-5px);
        }

        .feature-icon {
            width: 60px;
            height: 60px;
            background-color: var(--light-blue);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 24px;
        }

        .feature-icon i {
            font-size: 24px;
            color: var(--secondary-color);
        }

        .feature-title {
            font-size: 24px;
            font-weight: 600;
            margin-bottom: 16px;
        }

        .testimonial-section {
            background-color: var(--secondary-color);
            color: var(--white);
            padding: 80px 0;
        }

        .testimonial-card {
            background-color: rgba(255,255,255,0.1);
            border-radius: 12px;
            padding: 32px;
            margin: 20px 0;
        }

        .testimonial-text {
            font-size: 18px;
            font-style: italic;
            margin-bottom: 24px;
        }

        .testimonial-author {
            display: flex;
            align-items: center;
        }

        .testimonial-author img {
            width: 48px;
            height: 48px;
            border-radius: 50%;
            margin-right: 16px;
        }

        .pricing-section {
            padding: 80px 0;
            background-color: #F8FAFC;
        }

        .pricing-card {
            background-color: var(--white);
            border-radius: 12px;
            padding: 40px 32px;
            box-shadow: 0 8px 16px rgba(0,0,0,0.08);
            height: 100%;
            transition: transform 0.3s;
        }

        .pricing-card:hover {
            transform: translateY(-5px);
        }

        .pricing-popular {
            border: 2px solid var(--primary-color);
        }

        .pricing-header {
            text-align: center;
            margin-bottom: 32px;
        }

        .pricing-title {
            font-size: 24px;
            font-weight: 600;
            margin-bottom: 16px;
        }

        .pricing-price {
            font-size: 40px;
            font-weight: 700;
            color: var(--secondary-color);
        }

        .pricing-period {
            font-size: 16px;
            color: var(--gray);
        }

        .pricing-features {
            margin-bottom: 32px;
        }

        .pricing-feature {
            margin: 12px 0;
            display: flex;
            align-items: center;
        }

        .pricing-feature i {
            color: var(--primary-color);
            margin-right: 12px;
        }

        .cta-section {
            background-color: var(--primary-color);
            color: var(--white);
            padding: 80px 0;
            text-align: center;
        }

        .cta-title {
            font-size: 36px;
            font-weight: 700;
            margin-bottom: 24px;
        }

        .cta-text {
            font-size: 18px;
            margin-bottom: 32px;
            opacity: 0.9;
        }

        .footer {
            background-color: var(--secondary-color);
            color: var(--white);
            padding: 60px 0 30px;
        }

        .footer-brand img {
            height: 40px;
            margin-bottom: 16px;
        }

        .footer-text {
            opacity: 0.8;
            margin-bottom: 24px;
        }

        .footer-title {
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 24px;
        }

        .footer-links {
            list-style: none;
            padding: 0;
        }

        .footer-link {
            margin-bottom: 12px;
        }

        .footer-link a {
            color: var(--white);
            opacity: 0.8;
            text-decoration: none;
            transition: opacity 0.3s;
        }

        .footer-link a:hover {
            opacity: 1;
        }

        .footer-social {
            display: flex;
            margin-top: 24px;
        }

        .footer-social a {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: rgba(255,255,255,0.1);
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 12px;
            color: var(--white);
            transition: background-color 0.3s;
        }

        .footer-social a:hover {
            background-color: var(--primary-color);
        }

        .footer-bottom {
            border-top: 1px solid rgba(255,255,255,0.1);
            padding-top: 24px;
            margin-top: 40px;
            text-align: center;
            opacity: 0.6;
            font-size: 14px;
        }
    </style>
{% endblock %}
