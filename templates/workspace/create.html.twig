{% extends 'base.html.twig' %}

{% block title %}Créer un groupe de travail - Système de Gestion Documentaire{% endblock %}

{% block body %}
    {% include "aside.html.twig" %}

    <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg">
        {# Inclure la barre de navigation #}
        {% include "navbar.html.twig" %}
        
        <div class="container-fluid py-2">
            <div class="row">
                <div class="col-12">
                    <div class="card my-4">
                        {# En-tête de la carte #}
                        <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                            <div class="bg-gradient-dark shadow-dark border-radius-lg pt-4 pb-3">
                                <h6 class="text-white text-capitalize ps-3">Créer un nouveau groupe de travail</h6>
                            </div>
                        </div>
                        
                        {# Corps de la carte - Formulaire #}
                        <div class="card-body px-4 pt-4 pb-3">
                            <form method="post" action="">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="input-group input-group-outline mb-4">
                                            <label class="form-label">Nom du groupe</label>
                                            <input type="text" name="name" class="form-control" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="input-group input-group-outline mb-4">
                                            <select name="visibility" class="form-control" required>
                                                <option value="" disabled selected>Visibilité du groupe</option>
                                                <option value="public">Public - Visible par tous les utilisateurs</option>
                                                <option value="private">Privé - Sur invitation uniquement</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="input-group input-group-outline mb-4">
                                    <label class="form-label">Description</label>
                                    <textarea name="description" class="form-control" rows="4"></textarea>
                                </div>
                                
                                <div class="row">
                                    <div class="col-12">
                                        <h6 class="mb-3 mt-4">Inviter des membres</h6>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="input-group input-group-outline mb-1">
                                            <input type="text" id="memberSearchInput" class="form-control" placeholder="Rechercher un utilisateur par nom ou email">
                                        </div>
                                        <small class="text-muted">Commencez à taper pour rechercher des utilisateurs</small>
                                    </div>
                                </div>
                                
                                <div class="card mt-3 mb-4">
                                    <div class="card-body p-3">
                                        <div class="table-responsive" style="max-height: 250px; overflow-y: auto;">
                                            <table class="table align-items-center mb-0" id="selectedMembersTable">
                                                <thead>
                                                    <tr>
                                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Utilisateur</th>
                                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Rôle</th>
                                                        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    {# Utilisateur actuel (créateur du groupe) #}
                                                    <tr>
                                                        <td>
                                                            <div class="d-flex px-2 py-1">
                                                                <div class="avatar avatar-sm me-3 bg-gradient-primary">
                                                                    Hello
                                                                </div>
                                                                <div class="d-flex flex-column justify-content-center">
                                                                    <h6 class="mb-0 text-sm">FASSINOU Alex</h6>
                                                                    <p class="text-xs text-secondary mb-0">roughikev@gmail.com</p>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <p class="text-xs font-weight-bold mb-0">Propriétaire</p>
                                                        </td>
                                                        <td class="align-middle text-center">
                                                            <span class="badge bg-gradient-success">Vous</span>
                                                        </td>
                                                    </tr>
                                                    
                                                    {# Membres à ajouter - Cette partie sera remplie dynamiquement via JavaScript #}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="row">
                                    <div class="col-12">
                                        <h6 class="mb-3 mt-4">Paramètres supplémentaires</h6>
                                    </div>
                                    
                                    <div class="col-md-6">
                                        <div class="form-check mb-3">
                                            <input class="form-check-input" type="checkbox" id="allowMembersInvite" name="allowMembersInvite">
                                            <label class="form-check-label" for="allowMembersInvite">
                                                Permettre aux membres d'inviter d'autres utilisateurs
                                            </label>
                                        </div>
                                    </div>
                                    
                                    <div class="col-md-6">
                                        <div class="form-check mb-3">
                                            <input class="form-check-input" type="checkbox" id="notifyOnChanges" name="notifyOnChanges" checked>
                                            <label class="form-check-label" for="notifyOnChanges">
                                                Notifier les membres des changements importants
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="d-flex justify-content-end mt-4">
                                    <a href="{{ path('app_workspace') }}" class="btn btn-outline-secondary me-2">
                                        Annuler
                                    </a>
                                    <button type="submit" class="btn bg-gradient-dark">
                                        Créer le groupe
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    
    <script>
        var win = navigator.platform.indexOf('Win') > -1;
        if (win && document.querySelector('#sidenav-scrollbar')) {
            var options = {
                damping: '0.5'
            }
            Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
        }
        
        // Initialiser les tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        });
        
        // Gestion des membres pour le groupe
        document.addEventListener('DOMContentLoaded', function() {
            // Simulation de recherche d'utilisateurs
            const memberSearchInput = document.getElementById('memberSearchInput');
            const membersList = [
                { id: 1, fullName: 'Marie Dupont', email: 'marie.dupont@example.com', initials: 'MD' },
                { id: 2, fullName: 'Jean Martin', email: 'jean.martin@example.com', initials: 'JM' },
                { id: 3, fullName: 'Sophie Bernard', email: 'sophie.bernard@example.com', initials: 'SB' },
                { id: 4, fullName: 'Lucas Petit', email: 'lucas.petit@example.com', initials: 'LP' },
                { id: 5, fullName: 'Emma Legrand', email: 'emma.legrand@example.com', initials: 'EL' }
            ];
            
            let searchResults = document.createElement('div');
            searchResults.className = 'search-results';
            searchResults.style.display = 'none';
            searchResults.style.position = 'absolute';
            searchResults.style.width = '100%';
            searchResults.style.zIndex = '1000';
            searchResults.style.backgroundColor = 'white';
            searchResults.style.border = '1px solid #ddd';
            searchResults.style.borderRadius = '4px';
            searchResults.style.boxShadow = '0 2px 5px rgba(0,0,0,0.15)';
            searchResults.style.maxHeight = '300px';
            searchResults.style.overflowY = 'auto';
            
            memberSearchInput.parentNode.style.position = 'relative';
            memberSearchInput.parentNode.appendChild(searchResults);
            
            memberSearchInput.addEventListener('input', function() {
                const value = this.value.toLowerCase();
                searchResults.innerHTML = '';
                
                if (value.length >= 2) {
                    const filteredMembers = membersList.filter(member => 
                        member.fullName.toLowerCase().includes(value) || 
                        member.email.toLowerCase().includes(value)
                    );
                    
                    if (filteredMembers.length > 0) {
                        filteredMembers.forEach(member => {
                            const memberDiv = document.createElement('div');
                            memberDiv.className = 'p-2 border-bottom search-result-item';
                            memberDiv.style.cursor = 'pointer';
                            memberDiv.style.transition = 'background-color 0.2s';
                            
                            memberDiv.innerHTML = `
                                <div class="d-flex align-items-center">
                                    <div class="avatar avatar-sm me-3 bg-gradient-info">
                                        ${member.initials}
                                    </div>
                                    <div>
                                        <h6 class="mb-0 text-sm">${member.fullName}</h6>
                                        <p class="text-xs text-secondary mb-0">${member.email}</p>
                                    </div>
                                </div>
                            `;
                            
                            memberDiv.addEventListener('mouseover', function() {
                                this.style.backgroundColor = '#f8f9fa';
                            });
                            
                            memberDiv.addEventListener('mouseout', function() {
                                this.style.backgroundColor = 'transparent';
                            });
                            
                            memberDiv.addEventListener('click', function() {
                                addMemberToTable(member);
                                searchResults.style.display = 'none';
                                memberSearchInput.value = '';
                            });
                            
                            searchResults.appendChild(memberDiv);
                        });
                        
                        searchResults.style.display = 'block';
                    } else {
                        const noResultDiv = document.createElement('div');
                        noResultDiv.className = 'p-3 text-center';
                        noResultDiv.innerHTML = 'Aucun utilisateur trouvé';
                        searchResults.appendChild(noResultDiv);
                        searchResults.style.display = 'block';
                    }
                } else {
                    searchResults.style.display = 'none';
                }
            });
            
            // Masquer les résultats si on clique ailleurs
            document.addEventListener('click', function(e) {
                if (e.target !== memberSearchInput && !searchResults.contains(e.target)) {
                    searchResults.style.display = 'none';
                }
            });
            
            // Fonction pour ajouter un membre au tableau
            function addMemberToTable(member) {
                // Vérifier si le membre est déjà dans le tableau
                const existingMember = document.querySelector(`tr[data-member-id="${member.id}"]`);
                if (existingMember) return;
                
                const tableBody = document.querySelector('#selectedMembersTable tbody');
                const newRow = document.createElement('tr');
                newRow.setAttribute('data-member-id', member.id);
                
                // Assigner une couleur en fonction de l'ID (pour la démo)
                const colorClasses = ['primary', 'success', 'info', 'warning', 'danger'];
                const colorIndex = member.id % 5;
                
                newRow.innerHTML = `
                    <td>
                        <div class="d-flex px-2 py-1">
                            <div class="avatar avatar-sm me-3 bg-gradient-${colorClasses[colorIndex]}">
                                ${member.initials}
                            </div>
                            <div class="d-flex flex-column justify-content-center">
                                <h6 class="mb-0 text-sm">${member.fullName}</h6>
                                <p class="text-xs text-secondary mb-0">${member.email}</p>
                                <input type="hidden" name="members[]" value="${member.id}">
                            </div>
                        </div>
                    </td>
                    <td>
                        <select name="roles[${member.id}]" class="form-control form-control-sm">
                            <option value="member">Membre</option>
                            <option value="admin">Administrateur</option>
                        </select>
                    </td>
                    <td class="align-middle text-center">
                        <button type="button" class="btn btn-sm btn-danger remove-member" data-member-id="${member.id}">
                            <i class="material-icons">close</i>
                        </button>
                    </td>
                `;
                
                tableBody.appendChild(newRow);
                
                // Ajouter l'événement pour supprimer le membre
                newRow.querySelector('.remove-member').addEventListener('click', function() {
                    const memberId = this.getAttribute('data-member-id');
                    const memberRow = document.querySelector(`tr[data-member-id="${memberId}"]`);
                    if (memberRow) {
                        memberRow.remove();
                    }
                });
            }
        });
    </script>
{% endblock %}